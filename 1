  <!-- Scripts -->
  <script>
    // Año dinámico
    document.getElementById('year').textContent = new Date().getFullYear();

    // Búsqueda simple por palabras clave en data-keywords
    const searchInput = document.getElementById('searchInput');
    const clearBtn = document.getElementById('clearSearch');
    const cards = Array.from(document.querySelectorAll('.product-card'));

    function applyFilter(q){
      const needle = q.trim().toLowerCase();
      cards.forEach(c => {
        const haystack = (c.dataset.keywords || '').toLowerCase();
        const match = haystack.includes(needle);
        c.style.display = (!needle || match) ? '' : 'none';
      });
    }

    searchInput.addEventListener('input', e => applyFilter(e.target.value));
    clearBtn.addEventListener('click', () => { searchInput.value = ''; applyFilter(''); searchInput.focus(); });
  </script>
